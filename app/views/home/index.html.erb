<div class="row">
  <div class="col-md-6">
    <h1>Welcome to FFC Web Help</h1>
  </div>
</div>

<div class="row">
  <% Page.all.each do |page| %>
    <div class="col-md-3">
      <div class="portlet">
        <div class="portlet-heading">
            <h3 class="portlet-title text-dark">
                <%= page.name %>
            </h3>
            <div class="portlet-widgets">
                <a href="javascript:;" data-toggle="reload"><span class="glyphicon glyphicon-refresh"></span></a>
                <span class="divider"></span>
                <a data-toggle="collapse" data-parent="#accordion1" href="#bg-default"><span class="glyphicon glyphicon-minus"></span></a>
                <span class="divider"></span>
                <a href="#" data-toggle="remove"><span class="glyphicon glyphicon-remove"></span></a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div id="bg-default" class="panel-collapse collapse in">
            <div class="portlet-body">
                <%= page.intro.html_safe if page.intro %>
            </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
