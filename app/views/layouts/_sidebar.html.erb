<!-- Aside Start-->
<aside class="left-panel">

    <!-- brand -->
    <div class="logo">
        <%= link_to '/', class: 'logo-expanded' do %>
            <i class="fa fa-pagelines"></i>
            <span class="nav-label">N+P</span>
        <% end %>
    </div>
    <!-- / brand -->

    <!-- Navbar Start -->
    <nav class="navigation">
        <ul class="list-unstyled">
            <li class="<%= current_page?(root_path) ? 'active' : '' %>"><%= link_to root_path do %><span class="nav-label"><i class="fa fa-home"></i>Dashboard</span><% end %></li>
            <% Page.all.each do |page| %>
              <li class="<%= @page && @page.name == page.name ? 'active' : '' %>"><%= link_to page_path(page) do %><span class="nav-label"><i class="fa fa-<%= page.icon %>"></i><%= page.name %></span><% end %></li>
            <% end %>
        </ul>
    </nav>

</aside>
<!-- Aside Ends-->
